{
  "name": "esm-loader-chaining-polyfill",
  "version": "0.1.0",
  "description": "Enable chaining multiple Node.js ESM '--experimental-loader's",
  "author": "Concision <contact@concision.me>",
  "license": "MIT",
  "repository": "https://github.com/concision/esm-loader-chaining-polyfill.git",
  "type": "module",
  "main": "./dist/tla.js",
  "typings": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/tla.js",
    "./tla": "./dist/tla.js",
    "./tla.js": "./dist/tla.js",
    "./no-tla": "./dist/no-tla.js",
    "./no-tla.js": "./dist/no-tla.js"
  },
  "files": [
    "dist/",
    "package.json",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "clean": "NODE_OPTIONS='--no-warnings ---loader=./lib/ts-node-esm-fix.mjs' gulp --color clean",
    "lint": "eslint --config .eslintrc.json --ext .ts --color gulpfile.ts src",
    "build": "NODE_OPTIONS='--no-warnings --loader=./lib/ts-node-esm-fix.mjs' gulp --color build",
    "prepack": "NODE_OPTIONS='--no-warnings --loader=./lib/ts-node-esm-fix.mjs' gulp --color prepack",
    "prepack:github": "NODE_OPTIONS='--no-warnings --loader=./lib/ts-node-esm-fix.mjs' gulp --color prepack:github",
    "publish": "yarn run prepack && cd dist && yarn npm publish",
    "publish:github": "yarn run prepack:github && cd dist && yarn npm publish"
  },
  "devDependencies": {
    "@types/del": "^4.0.0",
    "@types/gulp": "^4.0.7",
    "@types/gulp-sourcemaps": "^0.0.32",
    "@types/gulp-typescript": "^2.13.0",
    "@types/node": "^14.14.6",
    "@types/vinyl": "^2.0.4",
    "@typescript-eslint/eslint-plugin": "^4.6.0",
    "@typescript-eslint/parser": "^4.6.0",
    "del": "^6.0.0",
    "eslint": "^7.12.1",
    "gulp": "^4.0.2",
    "gulp-run": "^1.7.1",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-typescript": "^6.0.0-alpha.1",
    "gulpclass": "^0.2.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
